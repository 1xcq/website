<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 m12">
                <h3 class="header center blue-text">Participants</h3>
            </div>
        </div>
    </div>

    <div class="section">
        <div class="row">
            <div class="col s12 m6">
                <h5 class="header center" id="sum_saturday"/>
            </div>
            <div class="col s12 m6">
                <h5 class="header center" id="sum_sunday"/>
            </div>
        </div>

    </div>
    <div class="section">
        <div id="participants" class="row">
        </div>
    </div>
</div>


<script id="participant-template" type="text/x-handlebars-template">
  <div class="col s12 m6 l4">
    <div class="card medium">
      <div class="card-image">
        {{#if urls.photo}}
           <img class="activator" src="{{urls.photo}}">
        {{else}}
           <img class="activator" src="/img/nophoto.png">
        {{/if}}
      </div>
      <div class="card-content">
        <span class="card-title activator">{{name}}<i class="material-icons right">more_vert</i></span>
          <!--
        <div class="card-tags">
          {{#list tags}}
             <div class="chip">{{ this }}</div>
          {{/list}}
        </div>
        -->

        {{#if company}}
           <p>{{company}}</p>
        {{/if}}

      </div>
      <div class="card-reveal">
        <span class="card-title activator">{{name}}<i class="material-icons right">close</i></span>
        {{#if what_is_my_connection_to_javascript}}
        <p>{{what_is_my_connection_to_javascript}}</p>
        {{/if}}
        {{#if what_can_i_contribute_to_js_craftcamp}}
        <p>{{what_can_i_contribute_to_js_craftcamp}}</p>
        {{/if}}
      </div>
      <div class="card-action">
        {{#if urls.homepage}}
        <a href="{{urls.homepage}}" target="_blank"><i class="fa fa-home fa-fw"/></a>
        {{/if}}
        {{#if urls.github}}
        <a href="{{urls.github}}" target="_blank"><i class="fa fa-github fa-fw"/></a>
        {{/if}}
        {{#if urls.twitter}}
        <a href="{{urls.twitter}}" target="_blank"><i class="fa fa-twitter fa-fw"/></a>
        {{/if}}
          {{#list tags}}
          <a class="orange-text" href="">{{ this }}</a>
          {{/list}}
        </div>
      </div>
    </div>
  </div>
</script>

